{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/.git/**",
      "**/cache/**",
      "**/artifacts/**",
      "**/typechain-types/**"
    ],
    "frameworksBackend": {
      "region": "us-east1",
      "maxInstances": 10,
      "minInstances": 1,
      "concurrency": 80,
      "memory": "512MiB",
      "cpu": 1
    },
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/api/rpc-health",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=30, s-maxage=30, stale-while-revalidate=60"
          }
        ]
      },
      {
        "source": "/api/holders-count",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=60, s-maxage=60, stale-while-revalidate=120"
          }
        ]
      },
      {
        "source": "/api/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=10, s-maxage=10, stale-while-revalidate=30"
          }
        ]
      }
    ]
  }
}
