# BTC1USD Protocol Environment Variables
# Copy this file to .env.local and fill in your actual values

# WalletConnect Project ID (get from https://cloud.reown.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Admin wallet address (deployer)
NEXT_PUBLIC_ADMIN_WALLET=0xYourAdminWalletAddress

# UI Controller - Address that can view admin panels (optional, defaults to ADMIN_WALLET)
# This address can access admin UI tabs but transactions still execute via Safe
NEXT_PUBLIC_UI_CONTROLLER=0xYourUIControllerAddress

# Safe Address - Multi-sig wallet for transaction execution (optional, defaults to ADMIN_WALLET)
# All admin transactions must be executed through this Gnosis Safe address
NEXT_PUBLIC_SAFE_ADDRESS=0xYourSafeAddress

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=84532
NEXT_PUBLIC_CHAIN_NAME="Base Sepolia"

# Multiple RPC endpoints for redundancy (ordered by reliability)
NEXT_PUBLIC_RPC_URL="https://sepolia.base.org,https://base-sepolia.gateway.pokt.network/v1/lb/your_pokt_id,https://base-sepolia.publicnode.com,https://base-sepolia.blockpi.network/v1/rpc/public"
RPC_URL="https://sepolia.base.org,https://base-sepolia.gateway.pokt.network/v1/lb/your_pokt_id,https://base-sepolia.publicnode.com,https://base-sepolia.blockpi.network/v1/rpc/public"

# Core Contracts (update these after deployment)
NEXT_PUBLIC_BTC1USD_CONTRACT="0xYourBTC1USDContractAddress"
NEXT_PUBLIC_VAULT_CONTRACT="0xYourVaultContractAddress"
NEXT_PUBLIC_PRICE_ORACLE_CONTRACT="0xYourPriceOracleContractAddress"
NEXT_PUBLIC_CHAINLINK_FEED="0x0FB99723Aee6f420beAD13e6bBB79b7E6F034298"
NEXT_PUBLIC_WEEKLY_DISTRIBUTION_CONTRACT="0xYourWeeklyDistributionContractAddress"
NEXT_PUBLIC_MERKLE_DISTRIBUTOR_CONTRACT="0xYourMerkleDistributorContractAddress"
NEXT_PUBLIC_ENDOWMENT_MANAGER_CONTRACT="0xYourEndowmentManagerContractAddress"
NEXT_PUBLIC_PROTOCOL_GOVERNANCE_CONTRACT="0xYourProtocolGovernanceContractAddress"
NEXT_PUBLIC_DAO_CONTRACT="0xYourDAOContractAddress"

# Mock Token Contracts
NEXT_PUBLIC_WBTC_TOKEN="0xYourWBTCTokenAddress"
NEXT_PUBLIC_CBBTC_TOKEN="0xYourCBBTCTokenAddress"
NEXT_PUBLIC_TBTC_TOKEN="0xYourTBTCTokenAddress"

# Wallet Smart Contracts (with on-chain distribution tracking)
NEXT_PUBLIC_DEV_WALLET_CONTRACT="0xYourDevWalletContractAddress"
NEXT_PUBLIC_ENDOWMENT_WALLET_CONTRACT="0xYourEndowmentWalletContractAddress"
NEXT_PUBLIC_MERKLE_FEE_COLLECTOR_CONTRACT="0xYourMerkleFeeCollectorContractAddress"

# Supabase Configuration (get from https://supabase.com/)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# IMPORTANT: Never commit your private key!
# Only needed for contract deployment scripts
DEPLOYER_PRIVATE_KEY="0xYourPrivateKeyHere"

# API Configuration
API_BASE_URL="https://api.btc1usd.com"

# Alchemy API Key (for RPC access and faster holder detection)
ALCHEMY_API_KEY="your_alchemy_api_key"
NEXT_PUBLIC_ALCHEMY_API_KEY="your_alchemy_api_key"

# BaseScan API Key (for token holder lists - recommended)
# Get from: https://basescan.org/myapikey
BASESCAN_API_KEY="your_basescan_api_key"

# Infura API Key (alternative RPC provider)
INFURA_API_KEY="https://sepolia.infura.io/v3/your_infura_project_id"

# 0x Protocol API Key (for swap functionality)
# Get from: https://dashboard.0x.org/
# Can use either ZEROX_API_KEY or NEXT_PUBLIC_0X_API_KEY
ZEROX_API_KEY="your_0x_api_key"
NEXT_PUBLIC_0X_API_KEY="your_0x_api_key"
